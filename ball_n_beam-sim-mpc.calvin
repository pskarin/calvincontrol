/* Actors */
clock : misc.Clock(period=0.1)
mpc : qpgen.BaB(offset=-0.1)

act : io.SimWriter(device="/bbsim_in-0")
ang : io.SimReader(device="/bbsim_out1-0", scale=0.785, noise=0.1, mean=-0.25)
pos : io.SimReader(device="/bbsim_out2-0", scale=0.55, noise=0.1)

dis : misc.PacedValueIterator( period=10.0, values=[0.0])

/* Connections */
clock.tick > ang.tick, pos.tick, dis.tick
pos.value > mpc.position
ang.value > mpc.angle
mpc.u > act.value
dis.value > mpc.ref
